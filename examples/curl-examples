#!/bin/sh
# Two quick API tests using curl

curl https://api.zulip.com/v1/send_message \
    -d "api-key=BOT_API_KEY" \
    -d "email=BOT_EMAIL" \
    -d "type=private" -d "content=test" \
    -d "to=RECIPIENT_EMAIL"

curl https://api.zulip.com/v1/get_messages \
    -d "api-key=BOT_API_KEY" \
    -d "email=BOT_EMAIL"

